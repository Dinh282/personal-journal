<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <form
        id='new-journal-form'
        class='new-journal-form shadow p-4 my-5 mx-auto bg-body rounded w-75 requires-validation'
        novalidate
      >
        <div>
          <div id='login-alert'></div>
          <label for='title' class='col-form-label'>Title</label>
          <div class='input-group has-validation'>
            <input
              type='text'
              class='form-control'
              id='journal-title'
              required
            />
            <div class='invalid-feedback'>Please enter a title for your Journal</div>
          </div>
        </div>
        <div>
          <label for='password' class='col-form-label'>Journal Description</label>
          <div class='input-group has-validation'>
            <input
              type='textarea'
              class='form-control'
              id='journal-desc'
              required
            />
            <div class='invalid-feedback'>Please enter a brief description for
              this journal.</div>
          </div>
        </div>
        <button
          type='submit'
          class='btn btn-primary btn-lg w-100 mt-4 p-3'
        >Submit</button>
        <button
          type='button'
          class='btn btn-secondary btn-lg w-100 mt-4 p-3'
          onclick='history.back()'
        >Cancel</button>
      </form>
    </div>
  </div>
</div>

<script src='/js/new-journal-form.js'></script>