{{!-- Modal for New Journal --}}
<!-- Button to trigger the modal -->
<div class="d-flex justify-content-center" >
  <button type="button" class="btn btn-primary w-25 mt-4 mb-4 p-3 mx-auto" data-bs-toggle="modal" data-bs-target="#myModal">
    Create A New Journal
  </button>
</div>  

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">New Journal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="new-journal-form" class="shadow p-4 bg-body rounded requires-validation" novalidate>
          <div class="mb-3">
            <label for="journal-title" class="form-label">Title</label>
            <input type="text" class="form-control" id="journal-title" required>
            <div class="invalid-feedback">Please enter a title for your Journal</div>
          </div>
          <div class="mb-3">
            <label for="journal-desc" class="form-label">Journal Description</label>
            <textarea class="form-control" id="journal-desc" required></textarea>
            <div class="invalid-feedback">Please enter a brief description for this journal.</div>
          </div>
          <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">Submit</button>
          <button type="button" class="btn btn-secondary btn-lg w-100 mt-4" data-bs-dismiss="modal">Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>


