{{! <section id='journal-list'> }}
<section class='container p-3 gallery-container'>
  {{!-- <h1 class='text-center mt-5'>{{journalPageMessage}}</h1> --}}
  {{! <div class='text-center'>
    <button class='btn btn-secondary btn-lg w-25 mt-4 p-3'>
      <a href='/journals/new' style='color: inherit; text-decoration: none;'>
        Create New Journal
      </a>
    </button>
  </div> }}
  <div class='row'>
    {{#if journals.length}}
      <div class='section-wrapper'>
        <div class='container'>
          <div class='row align-items-center'>
            <div class='col-lg-4'>
              <div class='swiper-active'>

                <!-- Additional required wrapper -->
                <div class='swiper-wrapper'>
                  <!-- Slides -->

                  {{#if journals.length}}
                    {{#each journals}}
                      {{! edit and delete should effect everything within this bracket }}
                      <div class='swiper-slide' data-journal-id='{{this.id}}'>
                        <a class='book-link' href='/journals/view/{{this.id}}'>
                          <div class='swiper-container'>
                            <div class='swiper-content'>

                              <div class='book-title'><h5
                                  class='book-card-title title-selector'
                                >{{this.title}}</h5>
                              </div>
                              <div>
                                <p
                                  class='content-selector cover-content'
                                >{{this.content}}</p>
                              </div>
                            </div>
                            <img
                              class='img-fluid'
                              src='/images/notebookBG.svg'
                              alt=''
                            />
                          </div>
                        </a>
                      </div>
                    {{/each}}
                  {{/if}}
                </div>

                <!-- If we need pagination -->
                <div class='swiper-pagination'></div>

              </div>
            </div>
            <div class='col-lg-8'>
              <div class='box-content'>
                <h2 id='slide-title'>{{journalData.title}}</h2>
                <span class='line-bar'></span>
                <p id='slide-content'>{{journalData.content}}</p>
                <button href='#' class='btn btn-danger btn-sm w-10'>Edit Journal</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    {{else}}
      <div class='px-4 py-5 my-5 text-center p2-hero'>
        <h1 class='display-5 fw-bold hero-headline'>Please click the create
          journal button to create your first journal.</h1>
      </div>
    {{/if}}

  </div>
</section>

<script src='/js/swiperjs-config.js'></script>
{{! </section> }}
{{! </section> }}