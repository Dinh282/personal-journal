{{! <section id='journal-list'> }}
<section class='container mt-5 p-3 gallery-container'>
  {{!-- <h1 class='text-center mt-5'>{{journalPageMessage}}</h1> --}}
  <div class='text-center'>
    <button class='btn btn-secondary btn-lg w-25 mt-4 p-3'>
      <a href='/journals/new' style='color: inherit; text-decoration: none;'>
        Create New Journal
      </a>
    </button>
  </div>
  <div class='row pt-5'>
    {{#if journals.length}}

      {{#each journals}}
        <div class='col-lg-2 col-md-4 col-sm-6 mb-4'>
          <a class='book-link' href='/journals/view/{{this.id}}'>
            <div class='card'>
              <div class='book-title'><h5
                  class='book-card-title'
                >{{this.title}}</h5></div>
              <img class='custom-card-img' src='/images/notebookBG.svg' />
            </div>
          </a>
        </div>
      {{/each}}

    {{else}}
      <h5 class='text-2xl text-center pt-8 text-stone-600'>You haven't created
        any Journals yet. Click the Create New Journal button to start one.</h5>
    {{/if}}

  </div>
</section>

{{! </section> }}