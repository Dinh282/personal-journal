<div class="container">
<div class="text-center">
<button class="btn btn-primary btn-lg w-25 mt-4 mb-4 p-3">
  <a href="/journals/new" style="color: inherit; text-decoration: none;">
    Create A New Journal
  </a>
</button>
</div>
</div>



<div class="container">
  {{#if journals.length}}

  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
      {{#each journals}}
      <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}" aria-current="{{@first}}" aria-label="Slide {{@index}}"></button>
      {{/each}}
    </div>

    <div class="carousel-inner">
      {{#each journals}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <img src="{{getJournalImage @index}}" class="img-fluid carousel-image" alt="...">
        <div class="carousel-caption d-none d-md-block">
        <a href="/journals/view/{{this.id}}" class="carousel-link">
            <div class="carousel-box">
              <h1>{{title}}</h1>
              <h3>{{content}}</h3>
              <p>Created On: {{format_date createdAt}}</p>
            </div>
          </a>
        </div>
      </div>
      {{/each}}
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>


{{else}}
  <h5 class="text-2xl text-center pt-8 text-stone-600">You haven't created any Journals yet. Click the Create New Journal button to start one.</h5>
{{/if}}
</div> 

